	author = {De Hertog, Steven J. and Havermann, Felix and Vanderkelen, Inne and Guo, Suqi and Luo, Fei and Manola, Iris and Coumou, Dim and Davin, Edouard L. and Duveiller, Gregory and Lejeune, Quentin and Pongratz, Julia and Schleussner, Carl-Friedrich and Seneviratne, Sonia I. and Thiery, Wim},
