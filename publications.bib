	journal = {Earth System Dynamics},
	author = {Pietroiusti, Rosa and Vanderkelen, Inne and Otto, Friederike E. L. and Barnes, Clair and Temple, Lucy and Akurut, Mary and Bally, Philippe and van Lipzig, Nicole P. M. and Thiery, Wim},
